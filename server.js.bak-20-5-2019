    var params = {
        q: '#XarxaGironaPerduts OR #XarxaGironaTrobats OR #XarxaGironaAdopcions OR #XarxaGironaDonacions OR #XarxaGironaALERTA -from:AnimalistesCAT', // Hashtags to search tweets within
